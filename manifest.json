{
  "manifest_version": 2,
  "author": "Kafil Uddin Kiron",

  "name": "Weatherly",
  "description": "Best way to see the weather details, right in your browser. Easier than looking outside!",
  "version": "1.1.0",

  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "Weatherly",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "js/lib/jquery.min.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "assets/images/icons/icon-16.png",
    "48": "assets/images/icons/icon-48.png",
    "128": "assets/images/icons/icon-128.png"
  },

  "key": "",

  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "geolocation"
  ]
}
